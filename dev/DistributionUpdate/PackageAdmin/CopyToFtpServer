#!/bin/sh
# $Id: CopyToFtpServer,v 1.1 2004/07/15 10:14:59 gapchron Exp $    (C) Frank LÃ¼beckk 

mypath=`dirname  $0`/

source ${mypath}setup

cd ${PkgWebFtpDir}/ftpdir

echo "Dry run:"
rsync -av -c -n tar.gz tar.bz2 zoo win.zip  ${FtpServer}
read -n 1 -p "Shall I copy? (y/n)> " ANSWER
echo

if [ $ANSWER = "y" ]; then
  echo "Ok, I'll copy ..."
  rsync -av -c  tar.gz tar.bz2 zoo win.zip  ${FtpServer}
else
  echo "Don't copy, bye."
fi

